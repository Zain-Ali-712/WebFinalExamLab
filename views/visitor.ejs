<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Visitors</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <h1>Visitor Management</h1>
  <form action="/visitors" method="POST">
    <input type="text" name="name" placeholder="Visitor Name" required>
    <input type="email" name="email" placeholder="Email" required>
    <input type="text" name="phone" placeholder="Phone Number" required>
    <input type="date" name="dateOfVisit" required>
    <select name="attractionsVisited" multiple>
      <% attractions.forEach(function(attraction) { %>
        <option value="<%= attraction._id %>"><%= attraction.name %></option>
      <% }); %>
    </select>
    <button type="submit">Add Visitor</button>
  </form>

  <a href="/">Home</a>
</body>
</html>
